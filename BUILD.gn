import("scripts/dawn_overrides_with_defaults.gni")
import("scripts/tint_overrides_with_defaults.gni")

group("benchmarks") {
  testonly = true
  deps = [ "src/tint:benchmarks" ]
}

group("fuzzers") {
  testonly = true
  deps = [
    "src/dawn/fuzzers",
    "src/tint:fuzzers",
  ]
}

group("libs") {
  deps = [
    "src/dawn/native:webgpu_dawn",
    "src/tint:libs",
  ]
}

group("tests") {
  testonly = true
  deps = [
    "src/dawn/tests",
    "src/tint:tests",
  ]
}

group("cmds") {
  deps = [
    "src/dawn/samples",
    "src/tint:cmds",
  ]
}

group("all") {
  testonly = true
  deps = [
    ":benchmarks",
    ":fuzzers",
    ":libs",
    ":tests",
  ]

  if (dawn_standalone) {
    deps += [ ":cmds" ]
  }
}

# This target is built when no specific target is specified on the command line.
group("default") {
  testonly = true
  deps = [ ":all" ]
}
